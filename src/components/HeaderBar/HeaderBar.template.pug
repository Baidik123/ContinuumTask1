v-app-bar(app color="primary" elevation="1")
  //v-toolbar-title.text-h4.ml-4.text-secondary Continuum
  img(src='@/assets/logo.png' alt="Continuum")
  v-spacer
  v-btn(icon @click="toggleTheme")
      v-icon mdi-theme-light-dark

  v-btn(icon color="green" @click='cloudDialog = true')
      v-icon mdi-cloud-check  
  v-toolbar-text.text-h14.mr-4.text-secondary Test_002
  v-menu(
      v-model="userMenu"
      location="bottom"
      transition="fade-transition"
      :close-on-content-click="false"
    )
      template(#activator="{ props }")
        v-btn(
          v-bind="props"
          color="secondary"
          variant="text"
          class="ml-4"
          :close-on-click="false"

        )
          v-icon.mr-1 mdi-account-settings
        
    
      v-card(min-width="300" variant="outlined")
        v-card-title User Settings
    
        v-card-text
          v-text-field(
            label="Username"
            v-model="user.name"
            variant="outlined"
            density="compact"
            hide-details
            append-inner-icon="mdi-account"
          )
    
          v-text-field.mt-3(
            label="Email"
            v-model="user.email"
            variant="plain"
            density="compact"
            hide-details
            append-inner-icon="mdi-email"
            readonly
          )
          v-card-actions(style="justify-content: center;")
            v-btn(icon @click="toggleTheme" variant ="tonal")
              v-icon mdi-theme-light-dark
      
  v-btn(icon @click="shield")
      v-icon mdi-shield   
  v-btn(icon)
      v-icon mdi-logout 
  v-btn(icon @click="openRightPanel")
      v-icon mdi-format-list-bulleted        
      
v-dialog(v-model='cloudDialog' max-width='300')
  v-card(title='Cloud Status')
    v-card-text
      | Green Cloud Status
    
     
  